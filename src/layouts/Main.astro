---
import '@fontsource/poppins'
import { ViewTransitions } from 'astro:transitions'
import { Image } from 'astro:assets'
import { FaGithub, FaLinkedin, FaTelegram } from 'react-icons/fa'
import { HiColorSwatch } from 'react-icons/hi'
import { ImProfile } from 'react-icons/im'
import { IoHome } from 'react-icons/io5'
import { RiMenu3Fill } from 'react-icons/ri'
import { SiGmail } from 'react-icons/si'

interface Props {
	title?: string
}

const { title = 'Sadam' } = Astro.props

const contacts = [
    {
        title: 'Email',
        href: 'mailto:sadam21x@gmail.com',
        icon: SiGmail,
    },
    {
        title: 'LinkedIn',
        href: 'https://www.linkedin.com/in/sadam21x',
        icon: FaLinkedin,
    },
    {
        title: 'GitHub',
        href: 'https://github.com/sadam21x',
        icon: FaGithub,
    },
    {
        title: 'Telegram',
        href: 'https://t.me/sadam21x',
        icon: FaTelegram,
    },
]

const menu = [
    {
        label: 'Home',
        href: '/',
        icon: IoHome,
        isCurrent: Astro.url.pathname === '/',
    },
    {
        label: 'Projects',
        href: '/projects',
        icon: HiColorSwatch,
        isCurrent: Astro.url.pathname.startsWith('/projects'),
    },
    {
        label: 'About Me',
        href: '/about',
        icon: ImProfile,
        isCurrent: Astro.url.pathname === '/about',
    },
]
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<ViewTransitions />
	</head>
	<body class="max-w-[1920px] mx-auto font-poppins">
		<div class="drawer lg:drawer-open">
			<input id="sidebar" type="checkbox" class="drawer-toggle" />

			<div class="drawer-content px-4 py-6 lg:p-16">
				<div class="pb-4 border-b flex justify-between items-center lg:hidden">
					<a href="/" class="flex items-center">
						<Image src="https://www.gravatar.com/avatar/77028e9fca037b7dcea01d8220097fe9?s=500" alt="avatar" width={40} height={40} loading="eager" class="rounded-full" />
						<h1 class="ml-4 text-2xl font-semibold">Sadam</h1>
					</a>

					<label for="sidebar" class="cursor-pointer">
						<RiMenu3Fill size={32} />
					</label>
				</div>

				<main class="mt-8 lg:mt-0">
					<slot />
				</main>
			</div>
			
			<div class="drawer-side">
				<label for="sidebar" class="drawer-overlay"></label> 
				
				<div class="w-[80vw] min-h-full px-4 py-6 bg-base-200 text-base-content sm:w-[50vw] lg:w-80 lg:py-8">
					<Image src="https://www.gravatar.com/avatar/77028e9fca037b7dcea01d8220097fe9?s=500" alt="avatar" width={100} height={100} loading="eager" class="mx-auto rounded-full" />

					<h1 class="mt-4 text-2xl text-center font-semibold">
						Sadam
					</h1>
				
					<h2 class="mt-1 text-sm text-center">
						Software Engineer
					</h2>

					<div class="mt-6 flex justify-center items-center gap-4">
						{contacts.map((contact) => (
							<a href={contact.href} target="_blank" class="tooltip" data-tip={contact.title} rel="noreferrer" aria-label="contact">
								<contact.icon size={24} />
							</a>
						))}
					</div>

					<ul class="menu mt-10 space-y-2">
						{menu.map((menu) => (
							<li>
								<a href={menu.href} class={`${menu.isCurrent && 'active'} flex gap-2.5 items-center`}>
									<menu.icon size={18} />
									<span>{menu.label}</span>
								</a>
							</li>
						))}
					</ul>
				</div>
			</div>
		</div>
	</body>
</html>

<style is:global>
	.no-scrollbar::-webkit-scrollbar {
		display: none;
	}
</style>
